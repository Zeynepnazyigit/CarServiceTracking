@model List<CarServiceTracking.UI.Web.ViewModels.Rentals.RentalAgreementListVM>
@{
    ViewData["Title"] = "Geciken Kiralama Sözleşmeleri";    Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-exclamation-triangle"></i> Geciken Kiralama Sözleşmeleri</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Tüm Sözleşmeler
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="fas fa-clock"></i> Süresi Geçmiş Sözleşmeler</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="alert alert-warning">
                    <i class="fas fa-info-circle"></i> Bu sözleşmelerin bitiş tarihi geçmiş ancak hala tamamlanmamıştır. Lütfen müşterilerle iletişime geçin.
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Sözleşme No</th>
                                <th>Müşteri</th>
                                <th>Araç</th>
                                <th>Bitiş Tarihi</th>
                                <th>Gecikme</th>
                                <th>Toplam Tutar</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var agreement in Model)
                            {
                                var overdueDays = (DateTime.Now - agreement.EndDate).Days;
                                
                                <tr class="table-danger">
                                    <td><strong>#@agreement.AgreementNumber</strong></td>
                                    <td>@agreement.CustomerName</td>
                                    <td>@agreement.VehicleInfo</td>
                                    <td>@agreement.EndDate.ToString("dd.MM.yyyy")</td>
                                    <td><span class="badge bg-danger">@overdueDays gün gecikmiş</span></td>
                                    <td><strong>@agreement.TotalAmount.ToString("C")</strong></td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@agreement.Id" class="btn btn-sm btn-info" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#completeModal-@agreement.Id" title="Tamamla">
                                            <i class="fas fa-check"></i>
                                        </button>

                                        <!-- Complete Modal -->
                                        <div class="modal fade" id="completeModal-@agreement.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header bg-primary text-white">
                                                        <h5 class="modal-title">Sözleşmeyi Tamamla</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <form asp-action="Complete" asp-route-id="@agreement.Id" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <div class="modal-body">
                                                            <div class="alert alert-warning">
                                                                <i class="fas fa-exclamation-triangle"></i> Bu sözleşme @overdueDays gün gecikmiş!
                                                            </div>
                                                            <p><strong>#@agreement.AgreementNumber</strong> numaralı sözleşmeyi tamamlamak üzeresiniz.</p>
                                                            <div class="mb-3">
                                                                <label class="form-label">Bitiş Kilometresi</label>
                                                                <input type="number" name="endMileage" class="form-control" required min="0" placeholder="Örn: 55000" />
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                            <button type="submit" class="btn btn-primary">Tamamla</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> Geciken kiralama sözleşmesi bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>
