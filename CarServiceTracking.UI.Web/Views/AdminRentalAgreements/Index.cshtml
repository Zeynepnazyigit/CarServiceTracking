@model List<CarServiceTracking.UI.Web.ViewModels.Rentals.RentalAgreementListVM>
@{
    ViewData["Title"] = "Kiralama Sözleşmeleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-file-contract"></i> Kiralama Sözleşmeleri</h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Yeni Sözleşme Oluştur
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-list"></i> Sözleşme Listesi</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <a asp-action="Active" class="btn btn-outline-success">
                    <i class="fas fa-check"></i> Aktif Sözleşmeler
                </a>
                <a asp-action="Overdue" class="btn btn-outline-danger">
                    <i class="fas fa-exclamation-triangle"></i> Geciken Sözleşmeler
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Sözleşme No</th>
                                <th>Müşteri</th>
                                <th>Araç</th>
                                <th>Başlangıç</th>
                                <th>Bitiş</th>
                                <th>Toplam Tutar</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var agreement in Model)
                            {
                                <tr>
                                    <td><strong>#@agreement.AgreementNumber</strong></td>
                                    <td>@agreement.CustomerName</td>
                                    <td>@agreement.VehicleInfo</td>
                                    <td>@agreement.StartDate.ToString("dd.MM.yyyy")</td>
                                    <td>@agreement.EndDate.ToString("dd.MM.yyyy")</td>
                                    <td><strong>@agreement.TotalAmount.ToString("C")</strong></td>
                                    <td><span class="@agreement.StatusBadgeClass">@agreement.StatusText</span></td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@agreement.Id" class="btn btn-sm btn-info" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (agreement.Status == "Active")
                                        {
                                            <a asp-action="Edit" asp-route-id="@agreement.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal-@agreement.Id" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>

                                        <!-- Delete Modal (Bootstrap 4: data-toggle / data-target / data-dismiss) -->
                                        <div class="modal fade" id="deleteModal-@agreement.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header bg-danger text-white">
                                                        <h5 class="modal-title">Sözleşme Sil</h5>
                                                        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <strong>#@agreement.AgreementNumber</strong> numaralı sözleşmeyi silmek istediğinizden emin misiniz?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                                                        <form asp-action="Delete" asp-route-id="@agreement.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">Sil</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Henüz kayıtlı kiralama sözleşmesi bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>
