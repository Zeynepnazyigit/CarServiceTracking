@model CarServiceTracking.UI.Web.ViewModels.Rentals.RentalAgreementEditVM
@{
    ViewData["Title"] = "Kiralama Sözleşmesi Detayları";    Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-info-circle"></i> Kiralama Sözleşmesi Detayları</h2>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="fas fa-file-contract"></i> Sözleşme #@Model.AgreementNumber</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="border-bottom pb-2"><i class="fas fa-user"></i> Müşteri Bilgileri</h6>
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Müşteri:</th>
                            <td>@Model.CustomerName</td>
                        </tr>
                    </table>

                    <h6 class="border-bottom pb-2 mt-4"><i class="fas fa-car"></i> Araç Bilgileri</h6>
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Araç:</th>
                            <td>@Model.VehicleInfo</td>
                        </tr>
                    </table>

                    <h6 class="border-bottom pb-2 mt-4"><i class="fas fa-calendar"></i> Tarih Bilgileri</h6>
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Başlangıç:</th>
                            <td>@Model.StartDate.ToString("dd.MM.yyyy")</td>
                        </tr>
                        <tr>
                            <th>Bitiş:</th>
                            <td>@Model.EndDate.ToString("dd.MM.yyyy")</td>
                        </tr>
                        <tr>
                            <th>Süre:</th>
                            <td><strong>@((Model.EndDate - Model.StartDate).Days) gün</strong></td>
                        </tr>
                    </table>
                </div>

                <div class="col-md-6">
                    <h6 class="border-bottom pb-2"><i class="fas fa-tachometer-alt"></i> Kilometre Bilgileri</h6>
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Başlangıç Km:</th>
                            <td>@Model.StartMileage?.ToString("N0") km</td>
                        </tr>
                        <tr>
                            <th>Bitiş Km:</th>
                            <td>@(Model.EndMileage?.ToString("N0") ?? "-") km</td>
                        </tr>
                        @if (Model.EndMileage.HasValue && Model.StartMileage.HasValue)
                        {
                            <tr>
                                <th>Toplam Mesafe:</th>
                                <td><strong>@((Model.EndMileage.Value - Model.StartMileage.Value).ToString("N0")) km</strong></td>
                            </tr>
                        }
                    </table>

                    <h6 class="border-bottom pb-2 mt-4"><i class="fas fa-money-bill-wave"></i> Ücret Bilgileri</h6>
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Günlük Ücret:</th>
                            <td>@Model.DailyRate.ToString("C")</td>
                        </tr>
                        <tr>
                            <th>Toplam Tutar:</th>
                            <td><strong class="text-success fs-5">@Model.TotalAmount.ToString("C")</strong></td>
                        </tr>
                        <tr>
                            <th>Depozito:</th>
                            <td>@Model.DepositAmount.ToString("C")</td>
                        </tr>
                    </table>

                    <h6 class="border-bottom pb-2 mt-4"><i class="fas fa-info-circle"></i> Durum</h6>
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Durum:</th>
                            <td>
                                @switch (Model.Status)
                                {
                                    case "Active":
                                        <span class="badge bg-success fs-6">Aktif</span>
                                        break;
                                    case "Completed":
                                        <span class="badge bg-primary fs-6">Tamamlandı</span>
                                        break;
                                    case "Cancelled":
                                        <span class="badge bg-danger fs-6">İptal Edildi</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary fs-6">@Model.Status</span>
                                        break;
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="row mt-4">
                    <div class="col-12">
                        <h6 class="border-bottom pb-2"><i class="fas fa-sticky-note"></i> Notlar:</h6>
                        <div class="alert alert-light">
                            @Model.Notes
                        </div>
                    </div>
                </div>
            }

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri
                </a>
                @if (Model.Status == "Active")
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#completeModal">
                        <i class="fas fa-check"></i> Tamamla
                    </button>

                    <!-- Complete Modal -->
                    <div class="modal fade" id="completeModal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header bg-primary text-white">
                                    <h5 class="modal-title">Sözleşmeyi Tamamla</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <form asp-action="Complete" asp-route-id="@Model.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="modal-body">
                                        <p>Sözleşmeyi tamamlamak üzeresiniz.</p>
                                        <div class="mb-3">
                                            <label class="form-label">Bitiş Kilometresi</label>
                                            <input type="number" name="endMileage" class="form-control" required min="@Model.StartMileage" value="@Model.EndMileage" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                        <button type="submit" class="btn btn-primary">Tamamla</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
