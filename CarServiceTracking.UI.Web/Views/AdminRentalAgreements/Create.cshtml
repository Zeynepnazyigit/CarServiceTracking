@model CarServiceTracking.UI.Web.ViewModels.Rentals.RentalAgreementCreateVM
@{
    ViewData["Title"] = "Yeni Kiralama Sözleşmesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-plus-circle"></i> Yeni Kiralama Sözleşmesi Oluştur</h2>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-file-contract"></i> Sözleşme Bilgileri</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CustomerId" class="form-label"></label>
                        <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.Customers">
                            <option value="">-- Müşteri Seçiniz --</option>
                        </select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="RentalVehicleId" class="form-label"></label>
                        <select asp-for="RentalVehicleId" class="form-select" asp-items="ViewBag.RentalVehicles" id="vehicleSelect">
                            <option value="">-- Araç Seçiniz --</option>
                        </select>
                        @if (ViewBag.HasRentalVehicles != true)
                        {
                            <small class="text-warning">Müsait kiralık araç bulunamadı. Önce "Kiralık Araçlar" bölümünden araç ekleyin ve müsait olarak işaretleyin.</small>
                        }
                        <span asp-validation-for="RentalVehicleId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="StartMileage" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="StartMileage" class="form-control" type="number" min="0" placeholder="50000" />
                            <span class="input-group-text">km</span>
                        </div>
                        <span asp-validation-for="StartMileage" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="DailyRate" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">₺</span>
                            <input asp-for="DailyRate" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="DailyRate" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="DepositAmount" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">₺</span>
                            <input asp-for="DepositAmount" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="DepositAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Sözleşme ile ilgili notlar..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Toplam tutar, günlük ücret ve tarih aralığına göre otomatik hesaplanacaktır.
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Oluştur
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function() {
            var rates = @Html.Raw(ViewBag.VehicleDailyRates ?? "{}");
            var vehicleSelect = document.getElementById('vehicleSelect');
            var dailyRateInput = document.querySelector('input[name="DailyRate"]');
            if (vehicleSelect && dailyRateInput) {
                vehicleSelect.addEventListener('change', function() {
                    var id = parseInt(this.value, 10);
                    if (id && rates[id] !== undefined) {
                        dailyRateInput.value = rates[id];
                    }
                });
            }
        })();
    </script>
}
