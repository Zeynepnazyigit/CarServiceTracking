@{
    ViewData["Title"] = "Sistem Ayarları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Sistem Ayarları</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- Genel Ayarlar -->
            <div class="col-lg-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Genel Ayarlar</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Firma Adı</label>
                            <input type="text" class="form-control" value="CarServiceTracking" />
                        </div>
                        <div class="form-group">
                            <label>E-posta</label>
                            <input type="email" class="form-control" value="info@carservice.com" />
                        </div>
                        <div class="form-group">
                            <label>Telefon</label>
                            <input type="text" class="form-control" value="+90 (312) 123 45 67" />
                        </div>
                        <div class="form-group">
                            <label>Adres</label>
                            <textarea class="form-control" rows="3">Çankaya, Ankara</textarea>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-primary">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                    </div>
                </div>
            </div>

            <!-- Sistem Ayarları -->
            <div class="col-lg-6">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Sistem Tercihleri</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Varsayılan Dil</label>
                            <select class="form-control">
                                <option selected>Türkçe</option>
                                <option>English</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Para Birimi</label>
                            <select class="form-control">
                                <option selected>TRY (₺)</option>
                                <option>USD ($)</option>
                                <option>EUR (€)</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Tarih Formatı</label>
                            <select class="form-control">
                                <option selected>DD/MM/YYYY</option>
                                <option>MM/DD/YYYY</option>
                                <option>YYYY-MM-DD</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" id="emailNotifications" checked>
                                <label class="custom-control-label" for="emailNotifications">E-posta Bildirimleri</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" id="smsNotifications">
                                <label class="custom-control-label" for="smsNotifications">SMS Bildirimleri</label>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-info">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Yedekleme -->
            <div class="col-lg-6">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Veritabanı Yedekleme</h3>
                    </div>
                    <div class="card-body">
                        <p>Son yedekleme: <strong>02/02/2026 03:00</strong></p>
                        <div class="form-group">
                            <label>Otomatik Yedekleme</label>
                            <select class="form-control">
                                <option>Kapalı</option>
                                <option selected>Günlük</option>
                                <option>Haftalık</option>
                                <option>Aylık</option>
                            </select>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-warning">
                            <i class="fas fa-download"></i> Şimdi Yedekle
                        </button>
                    </div>
                </div>
            </div>

            <!-- Güvenlik -->
            <div class="col-lg-6">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Güvenlik Ayarları</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Oturum Süresi (dakika)</label>
                            <input type="number" class="form-control" value="30" />
                        </div>
                        <div class="form-group">
                            <label>Minimum Şifre Uzunluğu</label>
                            <input type="number" class="form-control" value="6" />
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" id="twoFactorAuth">
                                <label class="custom-control-label" for="twoFactorAuth">İki Faktörlü Doğrulama</label>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-danger">
                            <i class="fas fa-shield-alt"></i> Kaydet
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
