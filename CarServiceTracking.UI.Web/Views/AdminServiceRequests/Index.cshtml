@model List<CarServiceTracking.UI.Web.ViewModels.ServiceRequests.ServiceRequestListVM>

@{
    ViewData["Title"] = "Servis Talepleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title font-weight-bold mb-0">
                <i class="fas fa-tools"></i> Servis Talepleri
            </h3>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Yeni Talep
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }

        @if (Model.Count == 0)
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Henüz servis talebi bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Araç</th>
                            <th>Sorun</th>
                            <th>Durum</th>
                            <th>Tercih Edilen Tarih</th>
                            <th>Oluşturulma</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <i class="fas fa-car"></i> @item.CarName
                                </td>
                                <td>
                                    @(item.ProblemDescription.Length > 50
                                        ? item.ProblemDescription.Substring(0, 50) + "..."
                                        : item.ProblemDescription)
                                </td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case 0:
                                            <span class="badge badge-warning">
                                                <i class="fas fa-clock"></i> Beklemede
                                            </span>
                                            break;
                                        case 1:
                                            <span class="badge badge-info">
                                                <i class="fas fa-spinner"></i> İşlemde
                                            </span>
                                            break;
                                        case 2:
                                            <span class="badge badge-success">
                                                <i class="fas fa-check"></i> Tamamlandı
                                            </span>
                                            break;
                                        case 3:
                                            <span class="badge badge-danger">
                                                <i class="fas fa-times"></i> İptal
                                            </span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (item.PreferredDate.HasValue)
                                    {
                                        <i class="fas fa-calendar"></i>
                                        @item.PreferredDate.Value.ToString("dd.MM.yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <i class="fas fa-calendar-plus"></i>
                                    @item.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-info" title="Detay">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="DownloadPdf" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-secondary" title="PDF İndir">
                                        <i class="fas fa-file-pdf"></i>
                                    </a>
                                    <a asp-action="UpdateStatus" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-warning" title="Durum Güncelle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Bu servis talebini silmek istediğinizden emin misiniz?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <p class="text-muted">
                    <i class="fas fa-list"></i> Toplam <strong>@Model.Count</strong> servis talebi bulunmaktadır.
                </p>
            </div>
        }
    </div>
</div>


