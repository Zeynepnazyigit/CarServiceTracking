@model CarServiceTracking.UI.Web.ViewModels.ServiceRequests.ServiceRequestDetailVM
@using CarServiceTracking.UI.Web.ViewModels.ServiceAssignments
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Servis Talebi Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var assignments = ViewBag.Assignments as List<ServiceAssignmentVM> ?? new List<ServiceAssignmentVM>();
    var mechanics = ViewBag.Mechanics as SelectList;
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title font-weight-bold mb-0">
                <i class="fas fa-info-circle"></i> Servis Talebi Detaylari
            </h3>
            <a asp-action="UpdateStatus" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                <i class="fas fa-edit"></i> Durum Guncelle
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-clipboard-list"></i> Genel Bilgiler</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Talep No:</dt>
                            <dd class="col-sm-7">
                                <span class="badge badge-secondary">#@Model.Id</span>
                            </dd>

                            <dt class="col-sm-5">Arac:</dt>
                            <dd class="col-sm-7">
                                <i class="fas fa-car"></i> @Model.CarName
                            </dd>

                            <dt class="col-sm-5">Durum:</dt>
                            <dd class="col-sm-7">
                                @switch (Model.Status)
                                {
                                    case 0:
                                        <span class="badge badge-warning badge-lg">
                                            <i class="fas fa-clock"></i> Beklemede
                                        </span>
                                        break;
                                    case 1:
                                        <span class="badge badge-info badge-lg">
                                            <i class="fas fa-spinner"></i> Islemde
                                        </span>
                                        break;
                                    case 2:
                                        <span class="badge badge-success badge-lg">
                                            <i class="fas fa-check"></i> Tamamlandi
                                        </span>
                                        break;
                                    case 3:
                                        <span class="badge badge-danger badge-lg">
                                            <i class="fas fa-times"></i> Iptal Edildi
                                        </span>
                                        break;
                                }
                            </dd>

                            <dt class="col-sm-5">Olusturulma:</dt>
                            <dd class="col-sm-7">
                                <i class="fas fa-calendar-plus"></i>
                                @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </dd>

                            <dt class="col-sm-5">Tercih Edilen Tarih:</dt>
                            <dd class="col-sm-7">
                                @if (Model.PreferredDate.HasValue)
                                {
                                    <i class="fas fa-calendar"></i>
                                    @Model.PreferredDate.Value.ToString("dd.MM.yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Belirtilmedi</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-money-bill-wave"></i> Ucret Bilgileri</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Servis Ucreti:</dt>
                            <dd class="col-sm-7">
                                @if (Model.ServicePrice.HasValue)
                                {
                                    <strong class="text-success">
                                        <i class="fas fa-lira-sign"></i>
                                        @Model.ServicePrice.Value.ToString("N2") TL
                                    </strong>
                                }
                                else
                                {
                                    <span class="text-muted">Henuz belirlenmedi</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.AdminNote))
                {
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-sticky-note"></i> Yonetici Notu</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@Model.AdminNote</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Sorun Aciklamasi</h5>
            </div>
            <div class="card-body">
                <p class="mb-0" style="white-space: pre-wrap;">@Model.ProblemDescription</p>
            </div>
        </div>

        <!-- Teknisyen Atama Bolumu -->
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-user-cog"></i> Atanan Teknisyenler</h5>
                    <span class="badge badge-light">@assignments.Count teknisyen</span>
                </div>
            </div>
            <div class="card-body">
                @if (assignments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Teknisyen</th>
                                    <th>Uzmanlik</th>
                                    <th>Atanma Tarihi</th>
                                    <th>Tahmini Saat</th>
                                    <th>Not</th>
                                    <th style="width: 80px;">Islem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var a in assignments)
                                {
                                    <tr>
                                        <td>
                                            <i class="fas fa-user-wrench"></i>
                                            <strong>@a.MechanicName</strong>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(a.Specialization))
                                            {
                                                <span class="badge badge-info">@a.Specialization</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@a.AssignedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            @if (a.EstimatedHours.HasValue)
                                            {
                                                <span>@a.EstimatedHours.Value saat</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@(a.Notes ?? "-")</td>
                                        <td class="text-center">
                                            <form asp-action="RemoveAssignment" method="post" class="d-inline"
                                                  onsubmit="return confirm('Bu teknisyen atamasini kaldirmak istediginizden emin misiniz?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="serviceRequestId" value="@Model.Id" />
                                                <input type="hidden" name="assignmentId" value="@a.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm" title="Atamayi Kaldir">
                                                    <i class="fas fa-user-minus"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-3">
                        <i class="fas fa-user-slash fa-2x mb-2"></i>
                        <p class="mb-0">Henuz teknisyen atanmamis.</p>
                    </div>
                }

                <!-- Yeni Teknisyen Atama Formu -->
                @if (Model.Status == 1) @* Sadece Islemde durumunda atama yapilabilir *@
                {
                    <hr />
                    <h6 class="text-primary"><i class="fas fa-plus-circle"></i> Teknisyen Ata</h6>
                    <form asp-action="AssignMechanic" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ServiceRequestId" value="@Model.Id" />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Teknisyen</label>
                                    <select name="MechanicId" class="form-control" required>
                                        <option value="">-- Teknisyen Seciniz --</option>
                                        @if (mechanics != null)
                                        {
                                            @foreach (var item in mechanics)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Tahmini Saat</label>
                                    <input type="number" name="EstimatedHours" class="form-control"
                                           step="0.5" min="0.1" max="999" placeholder="orn: 2.5" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Not</label>
                                    <input type="text" name="Notes" class="form-control"
                                           placeholder="Atama notu (opsiyonel)" maxlength="1000" />
                                </div>
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <div class="form-group w-100">
                                    <button type="submit" class="btn btn-primary btn-block">
                                        <i class="fas fa-user-plus"></i> Ata
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                }
                else if (Model.Status == 0)
                {
                    <hr />
                    <div class="alert alert-warning mb-0">
                        <i class="fas fa-info-circle"></i>
                        Teknisyen atamak icin once durumu <strong>"Islemde"</strong> olarak guncelleyin.
                    </div>
                }
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Listeye Don
            </a>
            <a asp-action="UpdateStatus" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Durum Guncelle
            </a>
            <a asp-action="DownloadPdf" asp-route-id="@Model.Id" class="btn btn-info">
                <i class="fas fa-file-pdf"></i> Servis Raporu PDF
            </a>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline"
                  onsubmit="return confirm('Bu servis talebini silmek istediginizden emin misiniz?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Sil
                </button>
            </form>
        </div>
    </div>
</div>
