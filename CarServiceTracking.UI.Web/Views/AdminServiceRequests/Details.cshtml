@model CarServiceTracking.UI.Web.ViewModels.ServiceRequests.ServiceRequestDetailVM

@{
    ViewData["Title"] = "Servis Talebi Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title font-weight-bold mb-0">
                <i class="fas fa-info-circle"></i> Servis Talebi Detayları
            </h3>
            <a asp-action="UpdateStatus" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                <i class="fas fa-edit"></i> Durum Güncelle
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-clipboard-list"></i> Genel Bilgiler</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Talep No:</dt>
                            <dd class="col-sm-7">
                                <span class="badge badge-secondary">#@Model.Id</span>
                            </dd>

                            <dt class="col-sm-5">Araç:</dt>
                            <dd class="col-sm-7">
                                <i class="fas fa-car"></i> @Model.CarName
                            </dd>

                            <dt class="col-sm-5">Durum:</dt>
                            <dd class="col-sm-7">
                                @switch (Model.Status)
                                {
                                    case 0:
                                        <span class="badge badge-warning badge-lg">
                                            <i class="fas fa-clock"></i> Beklemede
                                        </span>
                                        break;
                                    case 1:
                                        <span class="badge badge-info badge-lg">
                                            <i class="fas fa-spinner"></i> İşlemde
                                        </span>
                                        break;
                                    case 2:
                                        <span class="badge badge-success badge-lg">
                                            <i class="fas fa-check"></i> Tamamlandı
                                        </span>
                                        break;
                                    case 3:
                                        <span class="badge badge-danger badge-lg">
                                            <i class="fas fa-times"></i> İptal Edildi
                                        </span>
                                        break;
                                }
                            </dd>

                            <dt class="col-sm-5">Oluşturulma:</dt>
                            <dd class="col-sm-7">
                                <i class="fas fa-calendar-plus"></i>
                                @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </dd>

                            <dt class="col-sm-5">Tercih Edilen Tarih:</dt>
                            <dd class="col-sm-7">
                                @if (Model.PreferredDate.HasValue)
                                {
                                    <i class="fas fa-calendar"></i>
                                    @Model.PreferredDate.Value.ToString("dd.MM.yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Belirtilmedi</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-money-bill-wave"></i> Ücret Bilgileri</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Servis Ücreti:</dt>
                            <dd class="col-sm-7">
                                @if (Model.ServicePrice.HasValue)
                                {
                                    <strong class="text-success">
                                        <i class="fas fa-lira-sign"></i>
                                        @Model.ServicePrice.Value.ToString("N2") TL
                                    </strong>
                                }
                                else
                                {
                                    <span class="text-muted">Henüz belirlenmedi</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.AdminNote))
                {
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-sticky-note"></i> Yönetici Notu</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@Model.AdminNote</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Sorun Açıklaması</h5>
            </div>
            <div class="card-body">
                <p class="mb-0" style="white-space: pre-wrap;">@Model.ProblemDescription</p>
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
            <a asp-action="UpdateStatus" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Durum Güncelle
            </a>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline"
                  onsubmit="return confirm('Bu servis talebini silmek istediğinizden emin misiniz?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Sil
                </button>
            </form>
        </div>
    </div>
</div>
