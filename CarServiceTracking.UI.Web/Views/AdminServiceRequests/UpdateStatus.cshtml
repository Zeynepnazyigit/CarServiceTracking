@model CarServiceTracking.UI.Web.ViewModels.ServiceRequests.ServiceRequestUpdateStatusVM

@{
    ViewData["Title"] = "Durum Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-warning text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-edit"></i> Servis Durumu Güncelle
        </h3>
    </div>
    <div class="card-body">
        <form asp-action="UpdateStatus" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Status" class="font-weight-bold"></label>
                <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-control">
                    <option value="">-- Durum Seçiniz --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
                <small class="form-text text-muted">
                    <i class="fas fa-info-circle"></i>
                    <strong>Beklemede:</strong> Talep alındı, henüz işlem başlamadı.<br />
                    <strong>İşlemde:</strong> Araç serviste, işlemler devam ediyor.<br />
                    <strong>Tamamlandı:</strong> Servis tamamlandı, araç teslim hazır.<br />
                    <strong>İptal Edildi:</strong> Talep iptal edildi.
                </small>
            </div>

            <div class="form-group">
                <label asp-for="ServicePrice" class="font-weight-bold"></label>
                <div class="input-group">
                    <input asp-for="ServicePrice" type="number" step="0.01" class="form-control"
                           placeholder="0.00" />
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="fas fa-lira-sign"></i>
                        </span>
                    </div>
                </div>
                <span asp-validation-for="ServicePrice" class="text-danger"></span>
                <small class="form-text text-muted">Servis ücreti opsiyoneldir</small>
            </div>

            <div class="form-group">
                <label asp-for="AdminNote" class="font-weight-bold"></label>
                <textarea asp-for="AdminNote" class="form-control" rows="4"
                          placeholder="Yapılan işlemler, değiştirilen parçalar vb. notlar..."></textarea>
                <span asp-validation-for="AdminNote" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-save"></i> Güncelle
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
