@model CarServiceTracking.UI.Web.ViewModels.Appointments.AppointmentEditVM

@{
    ViewData["Title"] = "Randevu Detayı";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";

    var statusText = Model.Status switch
    {
        "Pending" => "Bekliyor",
        "Confirmed" => "Onaylandı",
        "InProgress" => "Devam Ediyor",
        "Completed" => "Tamamlandı",
        "Cancelled" => "İptal Edildi",
        "NoShow" => "Gelmedi",
        _ => Model.Status
    };

    var statusClass = Model.Status switch
    {
        "Pending" => "bg-warning",
        "Confirmed" => "bg-success",
        "InProgress" => "bg-info",
        "Completed" => "bg-primary",
        "Cancelled" => "bg-danger",
        "NoShow" => "bg-dark",
        _ => "bg-secondary"
    };
}

<section class="py-4">
    <div class="container-fluid">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold mb-1">
                    <i class="fa-solid fa-calendar-check text-primary me-2"></i>
                    Randevu #@Model.Id
                </h2>
                <p class="text-muted mb-0">Randevunuzun detaylı bilgileri</p>
            </div>
            <a href="/Customer/Appointments/Index" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left me-1"></i> Geri Dön
            </a>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fa-solid fa-exclamation-circle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row g-4">
            <!-- SOL: Randevu Bilgileri -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fa-solid fa-info-circle me-2"></i>
                            Randevu Bilgileri
                        </h5>
                        <span class="badge @statusClass fs-6">@statusText</span>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless mb-0">
                            <tbody>
                                <tr>
                                    <th style="width:200px;" class="text-muted">
                                        <i class="fa-solid fa-car me-2"></i>Ara&ccedil;
                                    </th>
                                    <td class="fw-semibold">@(Model.CarInfo ?? "-")</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">
                                        <i class="fa-solid fa-calendar me-2"></i>Randevu Tarihi
                                    </th>
                                    <td class="fw-semibold">@Model.AppointmentDate.ToString("dd.MM.yyyy")</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">
                                        <i class="fa-solid fa-clock me-2"></i>Saat Aral&inodot;&gbreve;&inodot;
                                    </th>
                                    <td>@Model.TimeSlot</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">
                                        <i class="fa-solid fa-screwdriver-wrench me-2"></i>Servis T&uuml;r&uuml;
                                    </th>
                                    <td>@(Model.RequestedService ?? "-")</td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <tr>
                                        <th class="text-muted">
                                            <i class="fa-solid fa-align-left me-2"></i>A&ccedil;&inodot;klama
                                        </th>
                                        <td>@Model.Description</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.CustomerNotes))
                                {
                                    <tr>
                                        <th class="text-muted">
                                            <i class="fa-solid fa-sticky-note me-2"></i>Notlar&inodot;n&inodot;z
                                        </th>
                                        <td>@Model.CustomerNotes</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.AdminNotes))
                                {
                                    <tr>
                                        <th class="text-muted">
                                            <i class="fa-solid fa-comment-dots me-2"></i>Servis Notu
                                        </th>
                                        <td>@Model.AdminNotes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- SAG: Islemler -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fa-solid fa-cogs me-2"></i>
                            İşlemler
                        </h5>
                    </div>
                    <div class="card-body d-grid gap-2">
                        @if (Model.Status == "Pending")
                        {
                            <form action="/Customer/Appointments/Cancel/@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="reason" value="Müşteri talebi" />
                                <button type="submit"
                                        class="btn btn-outline-danger w-100"
                                        onclick="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?')">
                                    <i class="fa-solid fa-times me-2"></i> Randevuyu İptal Et
                                </button>
                            </form>
                        }
                        <a href="/Customer/Appointments/Index"
                           class="btn btn-outline-secondary">
                            <i class="fa-solid fa-list me-2"></i> Tüm Randevularım
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
