@model List<CarServiceTracking.UI.Web.ViewModels.Appointments.AppointmentListVM>

@{
    ViewData["Title"] = "Randevularım";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<section class="py-4">
    <div class="container-fluid">

        <!-- BAŞLIK -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold mb-1">
                    <i class="fa-solid fa-calendar-check text-primary me-2"></i>
                    Randevularım
                </h2>
                <p class="text-muted mb-0">Servis randevularınızı görüntüleyin ve yönetin</p>
            </div>
            <a href="/Customer/Appointments/Create" class="btn btn-primary">
                <i class="fa-solid fa-plus me-1"></i> Yeni Randevu
            </a>
        </div>

        <!-- BAŞARI/HATA MESAJLARI -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fa-solid fa-check-circle me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fa-solid fa-exclamation-circle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- RANDEVU LİSTESİ -->
        @if (Model == null || !Model.Any())
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fa-solid fa-calendar-xmark fa-4x text-muted mb-3"></i>
                    <h5>Henüz randevunuz bulunmamaktadır</h5>
                    <p class="text-muted">Yeni bir randevu oluşturmak için aşağıdaki butona tıklayın.</p>
                    <a href="/Customer/Appointments/Create" class="btn btn-primary">
                        <i class="fa-solid fa-plus me-1"></i> İlk Randevunuzu Oluşturun
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-list me-2"></i>
                        Toplam @Model.Count randevu
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Araç</th>
                                    <th>Tarih</th>
                                    <th>Saat</th>
                                    <th>Servis Türü</th>
                                    <th>Durum</th>
                                    <th class="text-center">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderByDescending(x => x.AppointmentDate))
                                {
                                    <tr>
                                        <td>
                                            <i class="fa-solid fa-car text-primary me-1"></i>
                                            @item.CarInfo
                                        </td>
                                        <td>
                                            <i class="fa-solid fa-calendar text-muted me-1"></i>
                                            @item.AppointmentDate.ToString("dd.MM.yyyy")
                                        </td>
                                        <td>
                                            <i class="fa-solid fa-clock text-muted me-1"></i>
                                            @item.TimeSlot
                                        </td>
                                        <td>@item.RequestedService</td>
                                        <td>
                                            <span class="@item.StatusBadgeClass">
                                                @switch (item.Status)
                                                {
                                                    case "Pending":
                                                        <i class="fa-solid fa-hourglass-half me-1"></i>
                                                        @:Bekliyor
                                                        break;
                                                    case "Confirmed":
                                                        <i class="fa-solid fa-check me-1"></i>
                                                        @:Onaylandı
                                                        break;
                                                    case "Cancelled":
                                                        <i class="fa-solid fa-times me-1"></i>
                                                        @:İptal
                                                        break;
                                                    case "Completed":
                                                        <i class="fa-solid fa-flag-checkered me-1"></i>
                                                        @:Tamamlandı
                                                        break;
                                                    default:
                                                        @item.Status
                                                        break;
                                                }
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            @if (item.Status == "Pending")
                                            {
                                                <form asp-action="Cancel" asp-route-id="@item.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="reason" value="Müşteri talebi" />
                                                    <button type="submit" 
                                                            class="btn btn-sm btn-outline-danger"
                                                            onclick="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?')">
                                                        <i class="fa-solid fa-times me-1"></i> İptal Et
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- GERİ BUTONU -->
        <div class="mt-4">
            <a href="/Customer/Home/Index" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left me-1"></i> Ana Sayfaya Dön
            </a>
        </div>

    </div>
</section>
