@model List<CarServiceTracking.UI.Web.ViewModels.Customers.CustomerListVM>

@{
    ViewData["Title"] = "Müşteri Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title font-weight-bold mb-0">
                <i class="fas fa-users"></i> Müşteri Yönetimi
            </h3>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Yeni Müşteri
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }

        @if (Model.Count == 0)
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Henüz müşteri bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Ad Soyad</th>
                            <th>E-posta</th>
                            <th>Telefon</th>
                            <th>Şehir</th>
                            <th>Firma</th>
                            <th>Araç Sayısı</th>
                            <th>Servis Sayısı</th>
                            <th>Durum</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>@customer.Id</td>
                                <td>
                                    <i class="fas fa-user"></i> <strong>@customer.FullName</strong>
                                </td>
                                <td>
                                    <i class="fas fa-envelope"></i> @customer.Email
                                </td>
                                <td>
                                    <i class="fas fa-phone"></i> @customer.Phone
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(customer.City))
                                    {
                                        <i class="fas fa-map-marker-alt"></i>
                                        @customer.City
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(customer.CompanyName))
                                    {
                                        <i class="fas fa-building"></i>
                                        @customer.CompanyName
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-info">@customer.TotalVehicles</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-secondary">@customer.TotalServices</span>
                                </td>
                                <td>
                                    @if (customer.IsActive)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check"></i> Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">
                                            <i class="fas fa-times"></i> Pasif
                                        </span>
                                    }
                                </td>
                                <td>
                                    <i class="fas fa-calendar"></i>
                                    @customer.CreatedDate.ToString("dd.MM.yyyy")
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@customer.Id"
                                       class="btn btn-sm btn-info" title="Detay">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@customer.Id"
                                       class="btn btn-sm btn-warning" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@customer.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Bu müşteriyi silmek istediğinizden emin misiniz?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <p class="text-muted">
                    <i class="fas fa-list"></i> Toplam <strong>@ViewBag.TotalCount</strong> müşteri bulunmaktadır.
                </p>
            </div>
        }
    </div>
</div>


