@model CarServiceTracking.UI.Web.ViewModels.Customers.CustomerCreateVM

@{
    ViewData["Title"] = "Yeni Müşteri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-user-plus"></i> Yeni Müşteri Ekle
        </h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName" class="font-weight-bold"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Ad giriniz" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName" class="font-weight-bold"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Soyad giriniz" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="font-weight-bold"></label>
                        <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Phone" class="font-weight-bold"></label>
                        <input asp-for="Phone" class="form-control" placeholder="05XX XXX XX XX" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="CompanyName" class="font-weight-bold"></label>
                <input asp-for="CompanyName" class="form-control" placeholder="Firma adı (opsiyonel)" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="font-weight-bold"></label>
                <textarea asp-for="Address" class="form-control" rows="2" placeholder="Adres giriniz (opsiyonel)"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="City" class="font-weight-bold"></label>
                        <input asp-for="City" class="form-control" placeholder="Şehir" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Country" class="font-weight-bold"></label>
                        <input asp-for="Country" class="form-control" placeholder="Ülke" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="PostalCode" class="font-weight-bold"></label>
                        <input asp-for="PostalCode" class="form-control" placeholder="Posta Kodu" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="TaxNumber" class="font-weight-bold"></label>
                <input asp-for="TaxNumber" class="form-control" placeholder="Vergi numarası (opsiyonel)" />
                <span asp-validation-for="TaxNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Notes" class="font-weight-bold"></label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Notlar (opsiyonel)"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
