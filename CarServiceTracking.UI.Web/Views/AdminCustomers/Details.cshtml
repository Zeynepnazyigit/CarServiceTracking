@model CarServiceTracking.UI.Web.ViewModels.Customers.CustomerDetailVM

@{
    ViewData["Title"] = "Müşteri Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title font-weight-bold mb-0">
                <i class="fas fa-user"></i> Müşteri Detayı
            </h3>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Geri
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }

        <div class="row">
            <div class="col-md-8">
                <h4 class="border-bottom pb-2 mb-3">
                    <i class="fas fa-user-circle"></i> Kişisel Bilgiler
                </h4>
                <table class="table table-bordered">
                    <tr>
                        <th style="width: 200px;"><i class="fas fa-user"></i> Ad Soyad</th>
                        <td><strong>@Model.FullName</strong></td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-envelope"></i> E-posta</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-phone"></i> Telefon</th>
                        <td>@Model.Phone</td>
                    </tr>
                    @if (!string.IsNullOrEmpty(Model.CompanyName))
                    {
                        <tr>
                            <th><i class="fas fa-building"></i> Firma Adı</th>
                            <td>@Model.CompanyName</td>
                        </tr>
                    }
                    @if (!string.IsNullOrEmpty(Model.TaxNumber))
                    {
                        <tr>
                            <th><i class="fas fa-file-invoice"></i> Vergi Numarası</th>
                            <td>@Model.TaxNumber</td>
                        </tr>
                    }
                </table>

                @if (!string.IsNullOrEmpty(Model.Address) || !string.IsNullOrEmpty(Model.City))
                {
                    <h4 class="border-bottom pb-2 mb-3 mt-4">
                        <i class="fas fa-map-marker-alt"></i> Adres Bilgileri
                    </h4>
                    <table class="table table-bordered">
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <tr>
                                <th style="width: 200px;">Adres</th>
                                <td>@Model.Address</td>
                            </tr>
                        }
                        @if (!string.IsNullOrEmpty(Model.City))
                        {
                            <tr>
                                <th>Şehir</th>
                                <td>@Model.City</td>
                            </tr>
                        }
                        @if (!string.IsNullOrEmpty(Model.Country))
                        {
                            <tr>
                                <th>Ülke</th>
                                <td>@Model.Country</td>
                            </tr>
                        }
                        @if (!string.IsNullOrEmpty(Model.PostalCode))
                        {
                            <tr>
                                <th>Posta Kodu</th>
                                <td>@Model.PostalCode</td>
                            </tr>
                        }
                    </table>
                }

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <h4 class="border-bottom pb-2 mb-3 mt-4">
                        <i class="fas fa-sticky-note"></i> Notlar
                    </h4>
                    <div class="alert alert-light border">
                        @Model.Notes
                    </div>
                }
            </div>

            <div class="col-md-4">
                <h4 class="border-bottom pb-2 mb-3">
                    <i class="fas fa-chart-bar"></i> İstatistikler
                </h4>
                <div class="card bg-light mb-3">
                    <div class="card-body text-center">
                        <h2 class="text-primary">@Model.TotalVehicles</h2>
                        <p class="mb-0"><i class="fas fa-car"></i> Toplam Araç</p>
                    </div>
                </div>
                <div class="card bg-light mb-3">
                    <div class="card-body text-center">
                        <h2 class="text-info">@Model.TotalServices</h2>
                        <p class="mb-0"><i class="fas fa-tools"></i> Toplam Servis</p>
                    </div>
                </div>
                <div class="card bg-light mb-3">
                    <div class="card-body text-center">
                        <h2 class="text-success">@Model.CompletedServices</h2>
                        <p class="mb-0"><i class="fas fa-check"></i> Tamamlanan</p>
                    </div>
                </div>
                <div class="card bg-light mb-3">
                    <div class="card-body text-center">
                        <h2 class="text-warning">@Model.PendingServices</h2>
                        <p class="mb-0"><i class="fas fa-clock"></i> Bekleyen</p>
                    </div>
                </div>

                <h4 class="border-bottom pb-2 mb-3 mt-4">
                    <i class="fas fa-info-circle"></i> Durum ve Tarih
                </h4>
                <table class="table table-sm table-bordered">
                    <tr>
                        <th>Durum</th>
                        <td>
                            @if (Model.IsActive)
                            {
                                <span class="badge badge-success">
                                    <i class="fas fa-check"></i> Aktif
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-warning">
                                    <i class="fas fa-times"></i> Pasif
                                </span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Kayıt Tarihi</th>
                        <td>@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                    </tr>
                    @if (Model.ModifiedDate.HasValue)
                    {
                        <tr>
                            <th>Güncellenme</th>
                            <td>@Model.ModifiedDate.Value.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
