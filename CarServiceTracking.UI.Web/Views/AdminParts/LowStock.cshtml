@model List<CarServiceTracking.UI.Web.ViewModels.Parts.PartListVM>

@{
    ViewData["Title"] = "Düşük Stoklu Parçalar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-exclamation-triangle"></i> Düşük Stoklu Parçalar
        </h3>
        <div class="card-tools">
            <a asp-controller="AdminParts" asp-action="Index" class="btn btn-sm btn-secondary">
                <i class="fas fa-arrow-left"></i> Tüm Parçalar
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-success m-3">
                <i class="fas fa-check-circle"></i> Düşük stoklu parça bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="alert alert-warning m-3 mb-0">
                <i class="fas fa-exclamation-triangle"></i> <strong>@Model.Count</strong> adet parçanın stoğu minimum seviyenin altında veya eşit!
            </div>
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Parça Adı</th>
                        <th>Parça Kodu</th>
                        <th>Kategori</th>
                        <th class="text-center">Mevcut Stok</th>
                        <th class="text-center">Min. Stok</th>
                        <th class="text-center">Eksik</th>
                        <th>Tedarikçi</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var part in Model)
                    {
                        var shortage = part.MinStockLevel - part.StockQuantity;
                        <tr class="table-warning">
                            <td><strong>@part.Name</strong></td>
                            <td><code>@part.PartCode</code></td>
                            <td><span class="badge badge-info">@part.Category</span></td>
                            <td class="text-center">
                                <span class="badge badge-danger font-weight-bold">@part.StockQuantity</span>
                            </td>
                            <td class="text-center">@part.MinStockLevel</td>
                            <td class="text-center">
                                @if (shortage > 0)
                                {
                                    <span class="text-danger font-weight-bold">-@shortage</span>
                                }
                                else
                                {
                                    <span class="text-warning">0</span>
                                }
                            </td>
                            <td>@(part.Supplier ?? "-")</td>
                            <td class="text-center">
                                <a asp-controller="AdminParts" asp-action="Edit" asp-route-id="@part.Id" class="btn btn-sm btn-warning" title="Stok Güncelle">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
