@model List<CarServiceTracking.UI.Web.ViewModels.Parts.PartListVM>

@{
    ViewData["Title"] = "Düşük Stoklu Parçalar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header" style="background:#1f2937; border-bottom:2px solid #ffc107;">
        <h3 class="card-title font-weight-bold mb-0" style="color:#ffc107;">
            <i class="fas fa-exclamation-triangle"></i> Düşük Stoklu Parçalar
        </h3>
        <div class="card-tools">
            <a asp-controller="AdminParts" asp-action="Index" class="btn btn-sm btn-secondary">
                <i class="fas fa-arrow-left"></i> Tüm Parçalar
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-success m-3">
                <i class="fas fa-check-circle"></i> Düşük stoklu parça bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="m-3 mb-0 p-3 rounded" style="background:#1f2937; border:1px solid #ffc107; color:#ffc107;">
                <i class="fas fa-exclamation-triangle"></i> <strong>@Model.Count</strong> adet parçanın stoğu minimum seviyenin altında veya eşit!
            </div>
            <table class="table table-hover mb-0">
                <thead>
                    <tr style="background:#1a1a2e;">
                        <th style="color:#e2e8f0;">Parça Adı</th>
                        <th style="color:#e2e8f0;">Parça Kodu</th>
                        <th style="color:#e2e8f0;">Kategori</th>
                        <th style="color:#e2e8f0;" class="text-center">Mevcut Stok</th>
                        <th style="color:#e2e8f0;" class="text-center">Min. Stok</th>
                        <th style="color:#e2e8f0;" class="text-center">Eksik</th>
                        <th style="color:#e2e8f0;">Tedarikçi</th>
                        <th style="color:#e2e8f0;" class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var part in Model)
                    {
                        var shortage = part.MinStockLevel - part.StockQuantity;
                        <tr style="background:transparent; border-left:4px solid #ffc107;">
                            <td style="color:#e2e8f0;"><strong>@part.Name</strong></td>
                            <td style="color:#e2e8f0;"><code>@part.PartCode</code></td>
                            <td><span class="badge badge-info">@part.Category</span></td>
                            <td class="text-center">
                                <span class="badge badge-danger font-weight-bold">@part.StockQuantity</span>
                            </td>
                            <td class="text-center" style="color:#e2e8f0;">@part.MinStockLevel</td>
                            <td class="text-center">
                                @if (shortage > 0)
                                {
                                    <span class="text-danger font-weight-bold">-@shortage</span>
                                }
                                else
                                {
                                    <span style="color:#ffc107;">0</span>
                                }
                            </td>
                            <td style="color:#e2e8f0;">@(part.Supplier ?? "-")</td>
                            <td class="text-center">
                                <a asp-controller="AdminParts" asp-action="Edit" asp-route-id="@part.Id" class="btn btn-sm btn-outline-warning" title="Stok Güncelle">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
