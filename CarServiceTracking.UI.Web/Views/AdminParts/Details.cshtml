@model CarServiceTracking.UI.Web.ViewModels.Parts.PartEditVM

@{
    ViewData["Title"] = "Parça Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-cog"></i> Parça Detayı - @Model.Name
        </h3>
    </div>
    <div class="card-body">
        @if (Model == null)
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> Parça bulunamadı.
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-info-circle"></i> Genel Bilgiler</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Parça Adı</dt>
                                <dd class="col-sm-7"><strong>@Model.Name</strong></dd>

                                <dt class="col-sm-5">Parça Kodu</dt>
                                <dd class="col-sm-7"><code>@Model.PartCode</code></dd>

                                <dt class="col-sm-5">Kategori</dt>
                                <dd class="col-sm-7"><span class="badge badge-info">@Model.Category</span></dd>

                                <dt class="col-sm-5">Tedarikçi</dt>
                                <dd class="col-sm-7">@(Model.Supplier ?? "-")</dd>

                                <dt class="col-sm-5">Durum</dt>
                                <dd class="col-sm-7">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Pasif</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-dollar-sign"></i> Fiyat ve Stok</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Birim Fiyat</dt>
                                <dd class="col-sm-7"><strong class="text-success">@Model.UnitPrice.ToString("C2")</strong></dd>

                                <dt class="col-sm-5">Stok Miktarı</dt>
                                <dd class="col-sm-7">
                                    @if (Model.StockQuantity <= Model.MinStockLevel)
                                    {
                                        <span class="badge badge-danger badge-lg">@Model.StockQuantity</span>
                                        <small class="text-danger ml-2">(Kritik Seviye!)</small>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success badge-lg">@Model.StockQuantity</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Min. Stok Seviyesi</dt>
                                <dd class="col-sm-7">@Model.MinStockLevel</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-sticky-note"></i> Açıklama</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Description</p>
                    </div>
                </div>
            }

            <div class="mt-3">
                <a asp-controller="AdminParts" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
                <a asp-controller="AdminParts" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
            </div>
        }
    </div>
</div>
