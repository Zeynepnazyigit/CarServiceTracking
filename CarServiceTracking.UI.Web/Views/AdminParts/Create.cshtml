@model CarServiceTracking.UI.Web.ViewModels.Parts.PartCreateVM

@{
    ViewData["Title"] = "Yeni Parça Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-plus"></i> Yeni Parça Ekle
        </h3>
    </div>
    <div class="card-body">
        <form asp-controller="AdminParts" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="font-weight-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Yağ Filtresi" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PartCode" class="font-weight-bold"></label>
                        <input asp-for="PartCode" class="form-control" placeholder="PRT-001" />
                        <span asp-validation-for="PartCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Category" class="font-weight-bold"></label>
                        <input asp-for="Category" class="form-control" placeholder="Filtre" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Supplier" class="font-weight-bold"></label>
                        <input asp-for="Supplier" class="form-control" placeholder="Tedarikçi Adı" />
                        <span asp-validation-for="Supplier" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="UnitPrice" class="font-weight-bold"></label>
                        <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" placeholder="0.00" />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="StockQuantity" class="font-weight-bold"></label>
                        <input asp-for="StockQuantity" class="form-control" type="number" value="0" />
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="MinStockLevel" class="font-weight-bold"></label>
                        <input asp-for="MinStockLevel" class="form-control" type="number" value="5" />
                        <span asp-validation-for="MinStockLevel" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="font-weight-bold"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Parça açıklaması"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="isActiveSwitch" checked />
                    <label class="custom-control-label" for="isActiveSwitch">Aktif</label>
                </div>
            </div>

            <div class="form-group mt-3">
                <a asp-controller="AdminParts" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
