@model CarServiceTracking.UI.Web.ViewModels.ListItems.ListItemEditVM

@{
    ViewData["Title"] = "Liste Öğesi Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-edit"></i> Liste Öğesi Düzenle
        </h3>
    </div>
    <div class="card-body">
        @if (Model == null)
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> Liste öğesi bulunamadı.
            </div>
        }
        else
        {
            <form asp-controller="AdminListItems" asp-action="Edit" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="font-weight-bold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ListType" class="font-weight-bold"></label>
                            <select asp-for="ListType" class="form-control">
                                <option value="">-- Liste Tipi Seçiniz --</option>
                                <option value="FuelType">Yakıt Tipi</option>
                                <option value="TransmissionType">Şanzıman Tipi</option>
                                <option value="CarType">Araç Tipi</option>
                                <option value="CustomerType">Müşteri Tipi</option>
                                <option value="ServiceType">Servis Tipi</option>
                                <option value="PartCategory">Parça Kategorisi</option>
                            </select>
                            <span asp-validation-for="ListType" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SortOrder" class="font-weight-bold"></label>
                            <input asp-for="SortOrder" class="form-control" type="number" />
                            <span asp-validation-for="SortOrder" class="text-danger"></span>
                            <small class="form-text text-muted">Listede gösterilme sırası</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Durum</label>
                            <div class="custom-control custom-switch">
                                <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="isActiveSwitch" />
                                <label class="custom-control-label" for="isActiveSwitch">Aktif</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="font-weight-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <a asp-controller="AdminListItems" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Güncelle
                    </button>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
