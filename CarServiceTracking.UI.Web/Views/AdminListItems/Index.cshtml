@model List<CarServiceTracking.UI.Web.ViewModels.ListItems.ListItemListVM>

@{
    ViewData["Title"] = "Liste Öğeleri Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-list"></i> Liste Öğeleri Yönetimi
        </h3>
        <div class="card-tools">
            <a asp-controller="AdminListItems" asp-action="Create" class="btn btn-sm btn-success">
                <i class="fa fa-plus"></i> Yeni Öğe Ekle
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info m-3">
                <i class="fas fa-info-circle"></i> Henüz kayıtlı liste öğesi bulunmamaktadır.
            </div>
        }
        else
        {
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Adı</th>
                        <th>Liste Tipi</th>
                        <th>Üst Öğe</th>
                        <th>Sıra</th>
                        <th>Durum</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderBy(x => x.ListType).ThenBy(x => x.SortOrder))
                    {
                        <tr>
                            <td><strong>@item.Name</strong></td>
                            <td>
                                <span class="badge badge-info">@item.ListType</span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ParentName))
                                {
                                    <span class="text-muted">@item.ParentName</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@item.SortOrder</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge badge-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Pasif</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-controller="AdminListItems" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-controller="AdminListItems" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" title="Sil" onclick="return confirm('Bu öğeyi silmek istediğinize emin misiniz?');">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
