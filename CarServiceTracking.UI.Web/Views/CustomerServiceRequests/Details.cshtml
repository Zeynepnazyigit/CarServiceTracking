@model CarServiceTracking.UI.Web.ViewModels.ServiceRequests.ServiceRequestDetailVM

@{
    ViewData["Title"] = "Servis Talebi Detayı";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";

    var statusClass = Model.Status switch
    {
        0 => "bg-warning",
        1 => "bg-info",
        2 => "bg-primary",
        3 => "bg-success",
        4 => "bg-danger",
        _ => "bg-secondary"
    };
}

<section class="py-4">
    <div class="container-fluid">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold mb-1">
                    <i class="fa-solid fa-wrench text-primary me-2"></i>
                    Servis Talebi #@Model.Id
                </h2>
                <p class="text-muted mb-0">Servis talebinizin detaylı bilgileri</p>
            </div>
            <a href="/Customer/ServiceRequests/Index" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left me-1"></i> Geri Dön
            </a>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fa-solid fa-exclamation-circle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row g-4">
            <!-- SOL: Temel Bilgiler -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fa-solid fa-info-circle me-2"></i>
                            Talep Bilgileri
                        </h5>
                        <span class="badge @statusClass fs-6">@Model.StatusText</span>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless mb-0">
                            <tbody>
                                <tr>
                                    <th style="width:200px;" class="text-muted">
                                        <i class="fa-solid fa-car me-2"></i>Ara&ccedil;
                                    </th>
                                    <td class="fw-semibold">@Model.CarName</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">
                                        <i class="fa-solid fa-exclamation-triangle me-2"></i>Sorun A&ccedil;&inodot;klamas&inodot;
                                    </th>
                                    <td>@Model.ProblemDescription</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">
                                        <i class="fa-solid fa-calendar me-2"></i>Tercih Edilen Tarih
                                    </th>
                                    <td>@(Model.PreferredDate?.ToString("dd.MM.yyyy") ?? "Belirtilmedi")</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">
                                        <i class="fa-solid fa-clock me-2"></i>Olu&scedil;turma Tarihi
                                    </th>
                                    <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                                @if (Model.ServicePrice.HasValue && Model.ServicePrice > 0)
                                {
                                    <tr>
                                        <th class="text-muted">
                                            <i class="fa-solid fa-turkish-lira-sign me-2"></i>Servis &Uuml;creti
                                        </th>
                                        <td class="fw-bold text-success">@Model.ServicePrice?.ToString("N2") TL</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.AdminNote))
                                {
                                    <tr>
                                        <th class="text-muted">
                                            <i class="fa-solid fa-comment me-2"></i>Servis Notu
                                        </th>
                                        <td>@Model.AdminNote</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- SAG: Islemler -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fa-solid fa-cogs me-2"></i>
                            İşlemler
                        </h5>
                    </div>
                    <div class="card-body d-grid gap-2">
                        <a href="/Customer/ServiceRequests/DownloadPdf/@Model.Id"
                           class="btn btn-outline-danger">
                            <i class="fa-solid fa-file-pdf me-2"></i> PDF İndir
                        </a>
                        <a href="/Customer/ServiceRequests/Index"
                           class="btn btn-outline-secondary">
                            <i class="fa-solid fa-list me-2"></i> Tüm Taleplerim
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
