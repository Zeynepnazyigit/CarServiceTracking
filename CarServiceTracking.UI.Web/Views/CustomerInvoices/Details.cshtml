@model CarServiceTracking.UI.Web.ViewModels.Invoices.InvoiceEditVM

@{
    ViewData["Title"] = "Fatura Detayı";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<section class="py-4">
    <div class="container-fluid">

        <!-- BAŞLIK -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold mb-1">
                    <i class="fa-solid fa-file-invoice text-primary me-2"></i>
                    Fatura Detayı
                </h2>
                <p class="text-muted mb-0">Fatura No: <strong>@Model.InvoiceNumber</strong></p>
            </div>
            <div class="d-flex gap-2">
                <a href="/Customer/Invoices/DownloadPdf/@Model.Id" class="btn btn-danger">
                    <i class="fa-solid fa-file-pdf me-1"></i> PDF İndir
                </a>
                <a href="/Customer/Invoices" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i> Geri Dön
                </a>
            </div>
        </div>

        <div class="row">
            <!-- FATURA BİLGİLERİ -->
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fa-solid fa-info-circle me-2"></i>
                            Fatura Bilgileri
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted small">Fatura Numarası</label>
                                <div class="fw-bold fs-5">
                                    <i class="fa-solid fa-hashtag text-primary me-1"></i>
                                    @Model.InvoiceNumber
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted small">Fatura Tarihi</label>
                                <div class="fw-bold">
                                    <i class="fa-solid fa-calendar text-primary me-1"></i>
                                    @Model.InvoiceDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted small">Vade Tarihi</label>
                                <div class="fw-bold">
                                    <i class="fa-solid fa-clock text-warning me-1"></i>
                                    @Model.DueDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted small">Ödeme Durumu</label>
                                <div>
                                    @switch (Model.PaymentStatus)
                                    {
                                        case "Paid":
                                            <span class="badge bg-success fs-6">
                                                <i class="fa-solid fa-check me-1"></i> Ödendi
                                            </span>
                                            break;
                                        case "PartiallyPaid":
                                            <span class="badge bg-warning fs-6">
                                                <i class="fa-solid fa-hourglass-half me-1"></i> Kısmi Ödendi
                                            </span>
                                            break;
                                        case "Pending":
                                            <span class="badge bg-secondary fs-6">
                                                <i class="fa-solid fa-clock me-1"></i> Bekliyor
                                            </span>
                                            break;
                                        case "Overdue":
                                            <span class="badge bg-danger fs-6">
                                                <i class="fa-solid fa-exclamation-triangle me-1"></i> Vadesi Geçti
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary fs-6">@Model.PaymentStatus</span>
                                            break;
                                    }
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div class="mt-3">
                                <label class="form-label text-muted small">Notlar</label>
                                <div class="p-3 bg-light rounded">
                                    <i class="fa-solid fa-sticky-note text-muted me-2"></i>
                                    @Model.Notes
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- TUTAR BİLGİLERİ -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fa-solid fa-calculator me-2"></i>
                            Tutar Özeti
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                            <span class="text-muted">Toplam Tutar</span>
                            <span class="fw-bold fs-5">
                                @Model.TotalAmount.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                            </span>
                        </div>

                        <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                            <span class="text-muted">Ödenen Tutar</span>
                            <span class="fw-bold text-success">
                                @Model.PaidAmount.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                            </span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Kalan Tutar</span>
                            @if (Model.RemainingAmount > 0)
                            {
                                <span class="fw-bold fs-4 text-danger">
                                    @Model.RemainingAmount.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                                </span>
                            }
                            else
                            {
                                <span class="fw-bold fs-4 text-success">
                                    @Model.RemainingAmount.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                                </span>
                            }
                        </div>
                    </div>

                    @if (Model.RemainingAmount > 0)
                    {
                        <div class="card-footer bg-light">
                            <a href="/Customer/Payments/Create?invoiceId=@Model.Id" class="btn btn-success w-100">
                                <i class="fa-solid fa-credit-card me-2"></i>
                                Ödeme Yap
                            </a>
                        </div>
                    }
                </div>

                <!-- BİLGİLENDİRME -->
                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="mb-3">
                            <i class="fa-solid fa-info-circle text-info me-2"></i>
                            Bilgilendirme
                        </h6>
                        <ul class="list-unstyled small mb-0">
                            <li class="mb-2">
                                <i class="fa-solid fa-check text-success me-2"></i>
                                Ödemelerinizi kredi kartı veya banka transferi ile yapabilirsiniz.
                            </li>
                            <li class="mb-2">
                                <i class="fa-solid fa-check text-success me-2"></i>
                                Vade tarihinden önce ödeme yapmanız önerilir.
                            </li>
                            <li class="mb-0">
                                <i class="fa-solid fa-phone text-primary me-2"></i>
                                Sorularınız için: <strong>0850 XXX XX XX</strong>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
