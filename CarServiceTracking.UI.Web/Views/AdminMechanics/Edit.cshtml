@model CarServiceTracking.UI.Web.ViewModels.Mechanics.MechanicEditVM

@{
    ViewData["Title"] = "Teknisyen Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-edit"></i> Teknisyen Düzenle
        </h3>
    </div>
    <div class="card-body">
        @if (Model == null)
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> Teknisyen bulunamadı.
            </div>
        }
        else
        {
            <form asp-controller="AdminMechanics" asp-action="Edit" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FirstName" class="font-weight-bold"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="font-weight-bold"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="font-weight-bold"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="font-weight-bold"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Specialization" class="font-weight-bold"></label>
                            <input asp-for="Specialization" class="form-control" />
                            <span asp-validation-for="Specialization" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="HireDate" class="font-weight-bold"></label>
                            <input asp-for="HireDate" class="form-control" type="date" />
                            <span asp-validation-for="HireDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="HourlyRate" class="font-weight-bold"></label>
                            <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="HourlyRate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="custom-control custom-switch">
                        <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="isActiveSwitch" />
                        <label class="custom-control-label" for="isActiveSwitch">Aktif</label>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <a asp-controller="AdminMechanics" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Güncelle
                    </button>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
