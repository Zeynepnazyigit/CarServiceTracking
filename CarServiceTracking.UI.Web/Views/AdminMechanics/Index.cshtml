@model List<CarServiceTracking.UI.Web.ViewModels.Mechanics.MechanicListVM>

@{
    ViewData["Title"] = "Teknisyen Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-user-cog"></i> Teknisyen Yönetimi
        </h3>
        <div class="card-tools">
            <a asp-controller="AdminMechanics" asp-action="Available" class="btn btn-sm btn-info">
                <i class="fas fa-check-circle"></i> Müsait Teknisyenler
            </a>
            <a asp-controller="AdminMechanics" asp-action="Create" class="btn btn-sm btn-success">
                <i class="fa fa-plus"></i> Yeni Teknisyen Ekle
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(ViewBag.Specialization))
        {
            <div class="mb-3">
                <a asp-controller="AdminMechanics" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-times"></i> Filtreyi Temizle
                </a>
                <span class="ml-2 text-muted">
                    <i class="fas fa-filter"></i> Uzmanlık: <strong>@ViewBag.Specialization</strong>
                </span>
            </div>
        }
    </div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info m-3">
                <i class="fas fa-info-circle"></i> Henüz kayıtlı teknisyen bulunmamaktadır.
            </div>
        }
        else
        {
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Telefon</th>
                        <th>E-posta</th>
                        <th>Uzmanlık</th>
                        <th class="text-right">Saatlik Ücret</th>
                        <th class="text-center">Aktif Görevler</th>
                        <th>Durum</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mechanic in Model)
                    {
                        <tr>
                            <td><strong><i class="fas fa-user"></i> @mechanic.FirstName @mechanic.LastName</strong></td>
                            <td>
                                @if (!string.IsNullOrEmpty(mechanic.PhoneNumber))
                                {
                                    <i class="fas fa-phone"></i> @mechanic.PhoneNumber
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@(mechanic.Email ?? "-")</td>
                            <td>
                                <a asp-controller="AdminMechanics" asp-action="Index" asp-route-specialization="@mechanic.Specialization" class="badge badge-info">
                                    @mechanic.Specialization
                                </a>
                            </td>
                            <td class="text-right">@mechanic.HourlyRate.ToString("C2")</td>
                            <td class="text-center">
                                @if (mechanic.ActiveAssignments > 0)
                                {
                                    <span class="badge badge-warning">@mechanic.ActiveAssignments</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">0</span>
                                }
                            </td>
                            <td>
                                @if (mechanic.IsActive)
                                {
                                    <span class="badge badge-success">Müsait</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Pasif</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-controller="AdminMechanics" asp-action="Details" asp-route-id="@mechanic.Id" class="btn btn-sm btn-info" title="Detay">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-controller="AdminMechanics" asp-action="Edit" asp-route-id="@mechanic.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-controller="AdminMechanics" asp-action="Delete" asp-route-id="@mechanic.Id" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" title="Sil" onclick="return confirm('Bu teknisyeni silmek istediğinize emin misiniz?');">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
