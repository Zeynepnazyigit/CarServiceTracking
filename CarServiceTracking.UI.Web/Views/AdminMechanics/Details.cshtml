@model CarServiceTracking.UI.Web.ViewModels.Mechanics.MechanicEditVM

@{
    ViewData["Title"] = "Teknisyen Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-user-cog"></i> Teknisyen Detayı - @Model.FirstName @Model.LastName
        </h3>
    </div>
    <div class="card-body">
        @if (Model == null)
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> Teknisyen bulunamadı.
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-user"></i> Kişisel Bilgiler</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Ad Soyad</dt>
                                <dd class="col-sm-7"><strong>@Model.FirstName @Model.LastName</strong></dd>

                                <dt class="col-sm-5">E-posta</dt>
                                <dd class="col-sm-7">@(Model.Email ?? "-")</dd>

                                <dt class="col-sm-5">Telefon</dt>
                                <dd class="col-sm-7">
                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        <i class="fas fa-phone"></i> @Model.PhoneNumber
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">İşe Başlama</dt>
                                <dd class="col-sm-7">@Model.HireDate.ToString("dd.MM.yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-briefcase"></i> Meslek Bilgileri</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Uzmanlık</dt>
                                <dd class="col-sm-7"><span class="badge badge-info badge-lg">@Model.Specialization</span></dd>

                                <dt class="col-sm-5">Saatlik Ücret</dt>
                                <dd class="col-sm-7"><strong class="text-success">@Model.HourlyRate.ToString("C2")</strong></dd>

                                <dt class="col-sm-5">Durum</dt>
                                <dd class="col-sm-7">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge badge-success">Müsait</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Pasif</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a asp-controller="AdminMechanics" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
                <a asp-controller="AdminMechanics" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
            </div>
        }
    </div>
</div>
