@model CarServiceTracking.UI.Web.ViewModels.Mechanics.MechanicCreateVM

@{
    ViewData["Title"] = "Yeni Teknisyen Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-plus"></i> Yeni Teknisyen Ekle
        </h3>
    </div>
    <div class="card-body">
        <form asp-controller="AdminMechanics" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName" class="font-weight-bold"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Ahmet" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName" class="font-weight-bold"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Yılmaz" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="font-weight-bold"></label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="ahmet@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="font-weight-bold"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="0532 123 45 67" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Specialization" class="font-weight-bold"></label>
                        <input asp-for="Specialization" class="form-control" placeholder="Motor Uzmanı" />
                        <span asp-validation-for="Specialization" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="HireDate" class="font-weight-bold"></label>
                        <input asp-for="HireDate" class="form-control" type="date" />
                        <span asp-validation-for="HireDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="HourlyRate" class="font-weight-bold"></label>
                        <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" placeholder="0.00" />
                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="isActiveSwitch" checked />
                    <label class="custom-control-label" for="isActiveSwitch">Aktif</label>
                </div>
            </div>

            <div class="form-group mt-3">
                <a asp-controller="AdminMechanics" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
