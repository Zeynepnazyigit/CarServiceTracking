@{
    Layout = null;
    var title = ViewData["Title"] ?? "Müşteri Paneli";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - CarServiceTracking</title>

    <!-- FontAwesome (lokal - CDN bağımlılığı yok) -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    <!-- AdminLTE -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css" />

    <!-- Customer CSS -->
    <link rel="stylesheet" href="~/css/customer.css" />
    <link rel="stylesheet" href="~/css/common.css" />
</head>

<body class="hold-transition dark-mode sidebar-mini layout-fixed">

    <div class="wrapper">

        <!-- NAVBAR -->
        <nav class="main-header navbar navbar-expand navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Customer/Home/Index" class="nav-link">Ana Sayfa</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <span class="nav-link">
                        <i class="fa-solid fa-user"></i> Müşteri
                    </span>
                </li>
                <li class="nav-item">
                    <a href="/Auth/Logout" class="nav-link text-danger">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- SIDEBAR -->
        <aside class="main-sidebar elevation-4">
            <a href="/Customer/Home/Index" class="brand-link text-white">
                <span class="brand-text font-weight-bold">CarServiceTracking</span>
            </a>

            <div class="sidebar">

                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="https://i.pravatar.cc/60?img=25"
                             class="img-circle elevation-2" />
                    </div>
                    <div class="info">
                        <span class="d-block">Müşteri Paneli</span>
                        <small class="text-muted">Hesap aktif</small>
                    </div>
                </div>

                <nav>
                    <ul class="nav nav-pills nav-sidebar flex-column" role="menu">

                        <li class="nav-item">
                            <a href="/Customer/Home/Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-house"></i>
                                <p>Ana Sayfa</p>
                            </a>
                        </li>

                        <li class="nav-header">ARAÇ & SERVİS</li>

                        <li class="nav-item">
                            <a href="/Customer/Cars/Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-id-card"></i>
                                <p>Şahsi Araçlarım</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Customer/CarsList/Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-car"></i>
                                <p>Geçici Araçlar</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Customer/ServiceRequests/Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-screwdriver-wrench"></i>
                                <p>Servis Kayıtlarım</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Customer/Appointments/Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-calendar-check"></i>
                                <p>Randevularım</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Customer/Invoices/Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-file-invoice"></i>
                                <p>Faturalarım</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Customer/Payments/Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-money-bill-wave"></i>
                                <p>Ödemelerim</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Customer/Rentals/Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-car-side"></i>
                                <p>Kiralamalarım</p>
                            </a>
                        </li>

                        <li class="nav-header">HESAP</li>

                        <li class="nav-item">
                            <a href="/Auth/Logout" class="nav-link text-danger">
                                <i class="nav-icon fa-solid fa-right-from-bracket"></i>
                                <p>Çıkış</p>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        </aside>

        <!-- CONTENT -->
        <div class="content-wrapper">
            <section class="content pt-4">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <footer class="main-footer text-center">
            <strong>CarServiceTracking</strong> © Müşteri Paneli
        </footer>

    </div>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>


