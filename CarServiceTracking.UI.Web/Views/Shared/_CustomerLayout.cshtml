@{
    Layout = null;
    var title = ViewData["Title"] ?? "Müşteri Paneli";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - CarServiceTracking</title>

    <!-- AdminLTE 3 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/overlayScrollbars/css/OverlayScrollbars.min.css" />

    <!-- Customer CSS (admin tarzı) -->
    <link rel="stylesheet" href="~/css/admin-layout.css" />
    <link rel="stylesheet" href="~/css/customer.css" />
    <link rel="stylesheet" href="~/css/common.css" />
</head>

<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed">
    <div class="wrapper">

        <!-- NAVBAR -->
        <nav class="main-header navbar navbar-expand navbar-dark navbar-navy">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Customer/Home/Index" class="nav-link">Ana Sayfa</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <span class="nav-link">
                        <span class="badge-soft"><i class="fa-solid fa-user"></i> Müşteri</span>
                    </span>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" href="/Auth/Logout" title="Çıkış">
                        <i class="fas fa-right-from-bracket"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- SIDEBAR -->
        <aside class="main-sidebar sidebar-dark-navy elevation-4">
            <a href="/Customer/Home/Index" class="brand-link">
                <span class="brand-text">CarServiceTracking</span>
            </a>

            <div class="sidebar">

                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="https://i.pravatar.cc/80?img=25"
                             class="img-circle elevation-2" alt="Müşteri" />
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Müşteri Paneli</a>
                        <small class="text-muted">Hesap aktif</small>
                    </div>
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">

                        <li class="nav-item">
                            <a href="/Customer/Home/Index"
                               class="nav-link @(currentController == "CustomerHome" ? "active" : "")">
                                <i class="nav-icon fa-solid fa-house"></i>
                                <p>Ana Sayfa</p>
                            </a>
                        </li>

                        <li class="nav-header">ARAÇ & SERVİS</li>

                        <li class="nav-item">
                            <a href="/Customer/Cars/Index"
                               class="nav-link @(currentController == "CustomerCars" ? "active" : "")">
                                <i class="nav-icon fa-solid fa-id-card"></i>
                                <p>Şahsi Araçlarım</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Customer/CarsList/Index"
                               class="nav-link @(currentController == "CustomerCarsList" ? "active" : "")">
                                <i class="nav-icon fa-solid fa-car"></i>
                                <p>Geçici Araçlar</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Customer/ServiceRequests/Index"
                               class="nav-link @(currentController == "CustomerServiceRequests" ? "active" : "")">
                                <i class="nav-icon fa-solid fa-screwdriver-wrench"></i>
                                <p>Servis Kayıtlarım</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Customer/Appointments/Index"
                               class="nav-link @(currentController == "CustomerAppointments" ? "active" : "")">
                                <i class="nav-icon fa-solid fa-calendar-check"></i>
                                <p>Randevularım</p>
                            </a>
                        </li>

                        <li class="nav-header">FİNANS</li>

                        <li class="nav-item">
                            <a href="/Customer/Invoices/Index"
                               class="nav-link @(currentController == "CustomerInvoices" ? "active" : "")">
                                <i class="nav-icon fa-solid fa-file-invoice"></i>
                                <p>Faturalarım</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Customer/Payments/Index"
                               class="nav-link @(currentController == "CustomerPayments" ? "active" : "")">
                                <i class="nav-icon fa-solid fa-credit-card"></i>
                                <p>Ödemelerim</p>
                            </a>
                        </li>

                        <li class="nav-header">KİRALAMA</li>

                        <li class="nav-item">
                            <a href="/Customer/Rentals/Index"
                               class="nav-link @(currentController == "CustomerRentals" ? "active" : "")">
                                <i class="nav-icon fa-solid fa-car-side"></i>
                                <p>Kiralamalarım</p>
                            </a>
                        </li>

                        <li class="nav-header">HESAP</li>

                        <li class="nav-item">
                            <a href="/Auth/Logout" class="nav-link text-danger">
                                <i class="nav-icon fa-solid fa-right-from-bracket"></i>
                                <p>Çıkış</p>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        </aside>

        <!-- CONTENT -->
        <div class="content-wrapper">

            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2 align-items-center">
                        <div class="col-sm-6">
                            <h1 class="m-0">@title</h1>
                        </div>
                        <div class="col-sm-6 text-sm-right mt-2 mt-sm-0">
                            <span class="text-muted">
                                <i class="fa-regular fa-calendar"></i> @DateTime.Now.ToString("dd MMMM yyyy")
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- FOOTER -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                v1.0
            </div>
            <strong>CarServiceTracking</strong> &copy; Müşteri Paneli
        </footer>

    </div>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
