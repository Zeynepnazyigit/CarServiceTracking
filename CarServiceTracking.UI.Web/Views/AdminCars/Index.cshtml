@model List<CarServiceTracking.UI.Web.ViewModels.Cars.CarListVM>

@{
    ViewData["Title"] = "Araç Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-car"></i> Araç Yönetimi
        </h3>
        <div class="card-tools">
            <a asp-controller="AdminCars" asp-action="Create" class="btn btn-sm btn-success">
                <i class="fa fa-plus"></i> Yeni Araç Ekle
            </a>
        </div>
    </div>
    <div class="card-body">
        <!-- Arama Formu -->
        <form asp-controller="AdminCars" asp-action="Index" method="get" class="mb-3">
            <div class="row">
                <div class="col-md-10">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                        </div>
                        <input type="text" 
                               name="search" 
                               class="form-control" 
                               placeholder="Plaka, marka, model veya müşteri adına göre ara..." 
                               value="@ViewBag.SearchTerm">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-block">
                        <i class="fas fa-search"></i> Ara
                    </button>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
            {
                <div class="mt-2">
                    <a asp-controller="AdminCars" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-times"></i> Aramayı Temizle
                    </a>
                    <span class="ml-2 text-muted">
                        <i class="fas fa-info-circle"></i> "@ViewBag.SearchTerm" için <strong>@Model.Count</strong> sonuç bulundu
                    </span>
                </div>
            }
        </form>
    </div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info m-3">
                <i class="fas fa-info-circle"></i> Henüz kayıtlı araç bulunmamaktadır.
            </div>
        }
        else
        {
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Plaka</th>
                        <th>Marka</th>
                        <th>Model</th>
                        <th>Müşteri</th>
                        <th>Yıl</th>
                        <th>Yakıt</th>
                        <th>Vites</th>
                        <th>Durum</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in Model)
                    {
                        <tr>
                            <td><span class="badge badge-secondary">@car.PlateNumber</span></td>
                            <td>@car.Brand</td>
                            <td>@car.Model</td>
                            <td>
                                @if (!string.IsNullOrEmpty(car.CustomerName))
                                {
                                    <i class="fas fa-user"></i> @car.CustomerName
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@car.Year</td>
                            <td>@car.FuelTypeName</td>
                            <td>@car.TransmissionTypeName</td>
                            <td>
                                @if (car.IsActive)
                                {
                                    <span class="badge badge-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Pasif</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-controller="AdminCars" asp-action="Details" asp-route-id="@car.Id" class="btn btn-sm btn-info" title="Detay">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-controller="AdminCars" asp-action="Edit" asp-route-id="@car.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-controller="AdminCars" asp-action="Delete" asp-route-id="@car.Id" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" title="Sil" onclick="return confirm('Bu aracı silmek istediğinize emin misiniz?');">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>


