@model CarServiceTracking.UI.Web.ViewModels.Cars.CarDetailVM

@{
    ViewData["Title"] = "Araç Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h3 class="card-title font-weight-bold mb-0">
                    <i class="fas fa-car"></i> Araç Detayı - @Model.PlateNumber
                </h3>
            </div>
            <div class="card-body">
                @if (Model == null)
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> Araç bulunamadı.
                    </div>
                }
                else
                {
                    <div class="row">
                        <!-- Sol Kolon: Genel Bilgiler -->
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Genel Bilgiler</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">Plaka Numarası</dt>
                                        <dd class="col-sm-7"><span class="badge badge-secondary badge-lg">@Model.PlateNumber</span></dd>

                                        <dt class="col-sm-5">Marka</dt>
                                        <dd class="col-sm-7"><strong>@Model.Brand</strong></dd>

                                        <dt class="col-sm-5">Model</dt>
                                        <dd class="col-sm-7"><strong>@Model.Model</strong></dd>

                                        <dt class="col-sm-5">Yıl</dt>
                                        <dd class="col-sm-7">@Model.Year</dd>

                                        <dt class="col-sm-5">Renk</dt>
                                        <dd class="col-sm-7">@(Model.Color ?? "-")</dd>

                                        <dt class="col-sm-5">Kilometre</dt>
                                        <dd class="col-sm-7">@(Model.Mileage?.ToString("N0") ?? "-") km</dd>

                                        <dt class="col-sm-5">Durum</dt>
                                        <dd class="col-sm-7">
                                            @if (Model.IsActive)
                                            {
                                                <span class="badge badge-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">Pasif</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <!-- Müşteri Bilgisi -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-user"></i> Müşteri Bilgisi</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">Müşteri Adı</dt>
                                        <dd class="col-sm-7">
                                            @if (!string.IsNullOrEmpty(Model.CustomerName))
                                            {
                                                <i class="fas fa-user-circle text-primary"></i> <strong>@Model.CustomerName</strong>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Sağ Kolon: Teknik Özellikler -->
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-cog"></i> Teknik Özellikler</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">Yakıt Tipi</dt>
                                        <dd class="col-sm-7">@(Model.FuelTypeName ?? "-")</dd>

                                        <dt class="col-sm-5">Şanzıman</dt>
                                        <dd class="col-sm-7">@(Model.TransmissionTypeName ?? "-")</dd>

                                        <dt class="col-sm-5">Araç Tipi</dt>
                                        <dd class="col-sm-7">@(Model.CarTypeName ?? "-")</dd>

                                        <dt class="col-sm-5">Şasi Numarası</dt>
                                        <dd class="col-sm-7"><code>@(Model.ChassisNumber ?? "-")</code></dd>

                                        <dt class="col-sm-5">Motor Numarası</dt>
                                        <dd class="col-sm-7"><code>@(Model.EngineNumber ?? "-")</code></dd>
                                    </dl>
                                </div>
                            </div>

                            <!-- Notlar -->
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <div class="card mb-3">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0"><i class="fas fa-sticky-note"></i> Notlar</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-0">@Model.Notes</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="mt-3">
                    <a asp-controller="AdminCars" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                    @if (Model != null)
                    {
                        <a asp-controller="AdminCars" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
