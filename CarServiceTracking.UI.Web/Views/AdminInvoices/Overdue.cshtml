@model List<CarServiceTracking.UI.Web.ViewModels.Invoices.InvoiceListVM>

@{
    ViewData["Title"] = "Vadesi Geçen Faturalar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-exclamation-triangle"></i> Vadesi Geçen Faturalar
        </h3>
        <div class="card-tools">
            <a asp-controller="AdminInvoices" asp-action="Index" class="btn btn-sm btn-light">
                <i class="fas fa-arrow-left"></i> Tüm Faturalar
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-success m-3">
                <i class="fas fa-check-circle"></i> Vadesi geçen fatura bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="alert alert-danger m-3 mb-0">
                <i class="fas fa-exclamation-triangle"></i> <strong>@Model.Count</strong> adet faturanın vadesi geçmiştir!
            </div>
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Fatura No</th>
                        <th>Müşteri</th>
                        <th>Fatura Tarihi</th>
                        <th>Vade Tarihi</th>
                        <th>Gecikme (Gün)</th>
                        <th class="text-right">Kalan Tutar</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model.OrderBy(x => x.DueDate))
                    {
                        var daysOverdue = (DateTime.Now - invoice.DueDate).Days;
                        <tr class="table-danger">
                            <td><strong>@invoice.InvoiceNumber</strong></td>
                            <td>@invoice.ServiceRequestInfo</td>
                            <td>@invoice.InvoiceDate.ToString("dd.MM.yyyy")</td>
                            <td><strong class="text-danger">@invoice.DueDate.ToString("dd.MM.yyyy")</strong></td>
                            <td><span class="badge badge-danger">@daysOverdue gün</span></td>
                            <td class="text-right"><strong class="text-danger">@invoice.RemainingAmount.ToString("C2")</strong></td>
                            <td class="text-center">
                                <a asp-controller="AdminInvoices" asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Detay
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
