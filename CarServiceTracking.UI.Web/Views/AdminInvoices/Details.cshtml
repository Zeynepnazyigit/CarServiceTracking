@model CarServiceTracking.UI.Web.ViewModels.Invoices.InvoiceEditVM

@{
    ViewData["Title"] = "Fatura Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-file-invoice"></i> Fatura Detayı - @Model.InvoiceNumber
        </h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Genel Bilgiler</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Fatura No</dt>
                            <dd class="col-sm-7"><strong>@Model.InvoiceNumber</strong></dd>

                            <dt class="col-sm-5">Fatura Tarihi</dt>
                            <dd class="col-sm-7">@Model.InvoiceDate.ToString("dd.MM.yyyy")</dd>

                            <dt class="col-sm-5">Vade Tarihi</dt>
                            <dd class="col-sm-7">@Model.DueDate.ToString("dd.MM.yyyy")</dd>

                            <dt class="col-sm-5">Durum</dt>
                            <dd class="col-sm-7">
                                @switch (Model.PaymentStatus)
                                {
                                    case "Pending":
                                        <span class="badge badge-warning badge-lg">Bekliyor</span>
                                        break;
                                    case "PartiallyPaid":
                                    case "Partial":
                                        <span class="badge badge-info badge-lg">Kısmi Ödendi</span>
                                        break;
                                    case "Paid":
                                        <span class="badge badge-success badge-lg">Ödendi</span>
                                        break;
                                    case "Overdue":
                                        <span class="badge badge-danger badge-lg">Vadesi Geçti</span>
                                        break;
                                    default:
                                        <span class="badge badge-light badge-lg">@Model.PaymentStatus</span>
                                        break;
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-dollar-sign"></i> Tutar Bilgileri</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Toplam Tutar</dt>
                            <dd class="col-sm-7"><strong class="text-primary">@Model.TotalAmount.ToString("C2")</strong></dd>

                            <dt class="col-sm-5">Ödenen Tutar</dt>
                            <dd class="col-sm-7"><span class="text-success">@Model.PaidAmount.ToString("C2")</span></dd>

                            <dt class="col-sm-5">Kalan Tutar</dt>
                            <dd class="col-sm-7">
                                @if (Model.RemainingAmount > 0)
                                {
                                    <strong class="text-danger">@Model.RemainingAmount.ToString("C2")</strong>
                                }
                                else
                                {
                                    <strong class="text-success">@Model.RemainingAmount.ToString("C2")</strong>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="card mb-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-sticky-note"></i> Notlar</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Notes</p>
                </div>
            </div>
        }

        <div class="mt-3">
            <a asp-controller="AdminInvoices" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Geri Dön
            </a>
            <a asp-controller="AdminInvoices" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Düzenle
            </a>
            <a asp-controller="AdminInvoices" asp-action="DownloadPdf" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="fas fa-file-pdf"></i> PDF İndir
            </a>
        </div>
    </div>
</div>
