@model List<CarServiceTracking.UI.Web.ViewModels.Invoices.InvoiceListVM>

@{
    ViewData["Title"] = "Fatura Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-file-invoice-dollar"></i> Fatura Yönetimi
        </h3>
        <div class="card-tools">
            <a asp-controller="AdminInvoices" asp-action="Overdue" class="btn btn-sm btn-danger">
                <i class="fas fa-exclamation-triangle"></i> Vadesi Geçenler
            </a>
            <a asp-controller="AdminInvoices" asp-action="Create" class="btn btn-sm btn-success">
                <i class="fa fa-plus"></i> Yeni Fatura
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info m-3">
                <i class="fas fa-info-circle"></i> Henüz kayıtlı fatura bulunmamaktadır.
            </div>
        }
        else
        {
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Fatura No</th>
                        <th>Müşteri</th>
                        <th>Tarih</th>
                        <th>Vade</th>
                        <th class="text-right">Toplam</th>
                        <th class="text-right">Ödenen</th>
                        <th class="text-right">Kalan</th>
                        <th>Durum</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model)
                    {
                        var isOverdue = invoice.DueDate < DateTime.Now && invoice.PaymentStatus != "Paid";
                        <tr class="@(isOverdue ? "table-danger" : "")">
                            <td><strong>@invoice.InvoiceNumber</strong></td>
                            <td><i class="fas fa-user"></i> @invoice.ServiceRequestInfo</td>
                            <td>@invoice.InvoiceDate.ToString("dd.MM.yyyy")</td>
                            <td>@invoice.DueDate.ToString("dd.MM.yyyy")</td>
                            <td class="text-right"><strong>@invoice.TotalAmount.ToString("C2")</strong></td>
                            <td class="text-right">@invoice.PaidAmount.ToString("C2")</td>
                            <td class="text-right">
                                @if (invoice.RemainingAmount > 0)
                                {
                                    <span class="text-danger font-weight-bold">@invoice.RemainingAmount.ToString("C2")</span>
                                }
                                else
                                {
                                    <span class="text-success">@invoice.RemainingAmount.ToString("C2")</span>
                                }
                            </td>
                            <td>
                                @switch (invoice.PaymentStatus)
                                {
                                    case "Pending":
                                        <span class="badge badge-warning">Bekliyor</span>
                                        break;
                                    case "PartiallyPaid":
                                        <span class="badge badge-info">Kısmi Ödendi</span>
                                        break;
                                    case "Paid":
                                        <span class="badge badge-success">Ödendi</span>
                                        break;
                                    case "Overdue":
                                        <span class="badge badge-danger">Vadesi Geçti</span>
                                        break;
                                    default:
                                        <span class="badge badge-light">@invoice.PaymentStatus</span>
                                        break;
                                }
                            </td>
                            <td class="text-center">
                                <a asp-controller="AdminInvoices" asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-sm btn-info" title="Detay">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-controller="AdminInvoices" asp-action="DownloadPdf" asp-route-id="@invoice.Id" class="btn btn-sm btn-secondary" title="PDF İndir">
                                    <i class="fas fa-file-pdf"></i>
                                </a>
                                <a asp-controller="AdminInvoices" asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-controller="AdminInvoices" asp-action="Delete" asp-route-id="@invoice.Id" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" title="Sil" onclick="return confirm('Bu faturayı silmek istediğinize emin misiniz?');">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
