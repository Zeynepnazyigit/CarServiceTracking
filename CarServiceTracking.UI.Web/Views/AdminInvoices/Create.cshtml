@model CarServiceTracking.UI.Web.ViewModels.Invoices.InvoiceCreateVM

@{
    ViewData["Title"] = "Yeni Fatura Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h3 class="card-title font-weight-bold mb-0">
            <i class="fas fa-plus"></i> Yeni Fatura Oluştur
        </h3>
    </div>
    <div class="card-body">
        <form asp-controller="AdminInvoices" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ServiceRequestId" class="font-weight-bold">Servis Talebi ID</label>
                <input asp-for="ServiceRequestId" class="form-control" type="number" placeholder="Servis talebi ID giriniz" />
                <span asp-validation-for="ServiceRequestId" class="text-danger"></span>
                <small class="form-text text-muted">Fatura oluşturulacak servis talebinin ID'sini giriniz.</small>
            </div>

            <div class="form-group form-check">
                <input asp-for="ReplaceIfExists" class="form-check-input" />
                <label asp-for="ReplaceIfExists" class="form-check-label">Mevcut faturayı silip yeniden oluştur</label>
                <small class="form-text text-muted d-block">Bu servis talebi için zaten fatura varsa, eski fatura silinir (iptal) ve yeni fatura oluşturulur.</small>
            </div>

            <div class="form-group mt-3">
                <a asp-controller="AdminInvoices" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Fatura Oluştur
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
