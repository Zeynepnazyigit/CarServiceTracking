@model List<CarServiceTracking.UI.Web.ViewModels.Rentals.RentalVehicleListVM>
@{
    ViewData["Title"] = "Kiralık Araçlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-car-side"></i> Kiralık Araçlar</h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Yeni Araç Ekle
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-list"></i> Araç Listesi</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <a asp-action="Available" class="btn btn-outline-success">
                    <i class="fas fa-check-circle"></i> Müsait Araçlar
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Plaka</th>
                                <th>Marka / Model</th>
                                <th>Yıl</th>
                                <th>Günlük Ücret</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vehicle in Model)
                            {
                                <tr>
                                    <td><strong>@vehicle.PlateNumber</strong></td>
                                    <td>@vehicle.Brand @vehicle.Model</td>
                                    <td>@vehicle.Year</td>
                                    <td><strong>@vehicle.DailyRate.ToString("C")</strong></td>
                                    <td>
                                        @if (vehicle.IsAvailable)
                                        {
                                            <span class="badge bg-success">Müsait</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Kirada</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-sm btn-info" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@vehicle.Id" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>

                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteModal-@vehicle.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header bg-danger text-white">
                                                        <h5 class="modal-title">Araç Sil</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <strong>@vehicle.PlateNumber - @vehicle.Brand @vehicle.Model</strong> aracını silmek istediğinizden emin misiniz?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                        <form asp-action="Delete" asp-route-id="@vehicle.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">Sil</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Henüz kayıtlı kiralık araç bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>
