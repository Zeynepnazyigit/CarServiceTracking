@model List<CarServiceTracking.UI.Web.ViewModels.Rentals.RentalVehicleListVM>
@{
    ViewData["Title"] = "Müsait Kiralık Araçlar";    Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-check-circle"></i> Müsait Kiralık Araçlar</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Tüm Araçlar
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-car"></i> Kiralanabilir Araçlar</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Plaka</th>
                                <th>Marka / Model</th>
                                <th>Yıl</th>
                                <th>Yakıt / Vites</th>
                                <th>Günlük Ücret</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vehicle in Model)
                            {
                                <tr>
                                    <td><strong>@vehicle.PlateNumber</strong></td>
                                    <td>@vehicle.Brand @vehicle.Model</td>
                                    <td>@vehicle.Year</td>
                                    <td>@vehicle.FuelType / @vehicle.TransmissionType</td>
                                    <td><strong class="text-success">@vehicle.DailyRate.ToString("C")</strong></td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-sm btn-info" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> Şu anda müsait kiralık araç bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>
