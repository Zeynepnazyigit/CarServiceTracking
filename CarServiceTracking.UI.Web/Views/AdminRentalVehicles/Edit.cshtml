@model CarServiceTracking.UI.Web.ViewModels.Rentals.RentalVehicleEditVM
@{
    ViewData["Title"] = "Kiralık Araç Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-edit"></i> Kiralık Araç Düzenle</h2>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="fas fa-car-side"></i> Araç Bilgileri - @Model.PlateNumber</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                <input asp-for="Id" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PlateNumber" class="form-label"></label>
                        <input asp-for="PlateNumber" class="form-control" />
                        <span asp-validation-for="PlateNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Year" class="form-label"></label>
                        <input asp-for="Year" class="form-control" type="number" min="1990" max="2030" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Brand" class="form-label"></label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Model" class="form-label"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="FuelType" class="form-label"></label>
                        <select asp-for="FuelType" class="form-select" asp-items="ViewBag.FuelTypes">
                            <option value="">-- Seçiniz --</option>
                        </select>
                        <span asp-validation-for="FuelType" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="TransmissionType" class="form-label"></label>
                        <select asp-for="TransmissionType" class="form-select" asp-items="ViewBag.TransmissionTypes">
                            <option value="">-- Seçiniz --</option>
                        </select>
                        <span asp-validation-for="TransmissionType" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Color" class="form-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="DailyRate" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">₺</span>
                            <input asp-for="DailyRate" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="DailyRate" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Mileage" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Mileage" class="form-control" type="number" min="0" />
                            <span class="input-group-text">km</span>
                        </div>
                        <span asp-validation-for="Mileage" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label d-block">&nbsp;</label>
                        <div class="form-check">
                            <input type="hidden" name="IsAvailable" id="IsAvailableValue" value="@(Model.IsAvailable ? "true" : "false")" />
                            <input type="checkbox" id="IsAvailable" class="form-check-input" @(Model.IsAvailable ? "checked" : "") />
                            <label class="form-check-label" for="IsAvailable">Müsait (işaretli = Müsait, işaretsiz = Kirada)</label>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Features" class="form-label"></label>
                    <textarea asp-for="Features" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Features" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            var form = document.querySelector('form[action*="Edit"]');
            var check = document.getElementById('IsAvailable');
            var hidden = document.getElementById('IsAvailableValue');
            if (form && check && hidden) {
                form.addEventListener('submit', function () {
                    hidden.value = check.checked ? 'true' : 'false';
                });
            }
        })();
    </script>
}
