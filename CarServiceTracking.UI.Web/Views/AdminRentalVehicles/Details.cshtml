@model CarServiceTracking.UI.Web.ViewModels.Rentals.RentalVehicleEditVM
@{
    ViewData["Title"] = "Kiralık Araç Detayları";    Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-info-circle"></i> Kiralık Araç Detayları</h2>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="fas fa-car-side"></i> @Model.PlateNumber - @Model.Brand @Model.Model</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Plaka:</th>
                            <td><strong>@Model.PlateNumber</strong></td>
                        </tr>
                        <tr>
                            <th>Marka:</th>
                            <td>@Model.Brand</td>
                        </tr>
                        <tr>
                            <th>Model:</th>
                            <td>@Model.Model</td>
                        </tr>
                        <tr>
                            <th>Yıl:</th>
                            <td>@Model.Year</td>
                        </tr>
                        <tr>
                            <th>Renk:</th>
                            <td>@(Model.Color ?? "-")</td>
                        </tr>
                    </table>
                </div>

                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Yakıt Tipi:</th>
                            <td>@Model.FuelType</td>
                        </tr>
                        <tr>
                            <th>Vites Tipi:</th>
                            <td>@Model.TransmissionType</td>
                        </tr>
                        <tr>
                            <th>Kilometre:</th>
                            <td>@(Model.Mileage?.ToString("N0") ?? "-") km</td>
                        </tr>
                        <tr>
                            <th>Günlük Ücret:</th>
                            <td><strong class="text-success fs-5">@Model.DailyRate.ToString("C")</strong></td>
                        </tr>
                        <tr>
                            <th>Durum:</th>
                            <td>
                                @if (Model.IsAvailable)
                                {
                                    <span class="badge bg-success fs-6">Müsait</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger fs-6">Kirada</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Features))
            {
                <div class="row mt-3">
                    <div class="col-12">
                        <h6><i class="fas fa-star"></i> Özellikler:</h6>
                        <div class="alert alert-light">
                            @Model.Features
                        </div>
                    </div>
                </div>
            }

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
            </div>
        </div>
    </div>
</div>
