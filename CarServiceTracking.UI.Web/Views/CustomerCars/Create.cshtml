@model CarServiceTracking.UI.Web.ViewModels.CustomerCars.CustomerCarCreateVM

@{
    ViewData["Title"] = "Yeni Araç Ekle";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container-fluid py-4">

    <div class="mb-4">
        <h2 class="fw-bold mb-2">Yeni Araç Ekle</h2>
        <p class="text-muted">Aracınızın bilgilerini girerek sisteme kaydedin.</p>
    </div>

    <div class="row">
        <div class="col-lg-8 col-xl-6">
            <div class="card p-4">

                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="CustomerId" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display:none;"></div>

                    <div class="mb-3">
                        <label asp-for="BrandModel" class="form-label fw-semibold">Marka / Model</label>
                        <input asp-for="BrandModel" class="form-control" placeholder="Örn: Toyota Corolla" />
                        <span asp-validation-for="BrandModel" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PlateNumber" class="form-label fw-semibold">Plaka</label>
                        <input asp-for="PlateNumber" class="form-control" placeholder="Örn: 34 ABC 123" />
                        <span asp-validation-for="PlateNumber" class="text-danger small"></span>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <label asp-for="Year" class="form-label fw-semibold">Model Yılı</label>
                            <input asp-for="Year" type="number" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Mileage" class="form-label fw-semibold">Kilometre</label>
                            <input asp-for="Mileage" type="number" class="form-control" placeholder="0" />
                            <span asp-validation-for="Mileage" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Color" class="form-label fw-semibold">Renk</label>
                            <input asp-for="Color" class="form-control" placeholder="Örn: Beyaz" />
                            <span asp-validation-for="Color" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Kaydet
                        </button>
                        <a href="/Customer/Cars/Index" class="btn btn-outline-secondary">
                            İptal
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>

</div>
